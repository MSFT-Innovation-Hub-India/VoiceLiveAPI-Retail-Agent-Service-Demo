# Copy this file to `.env` and fill in your values for local development.
# NOTE: `.env` is already git-ignored in this repo. Do not commit real secrets.

# Required for the Chainlit voice app
# Your Azure AI Services (Cognitive Services) endpoint for Voice Live API
AZURE_VOICE_LIVE_ENDPOINT="https://<your-endpoint>.cognitiveservices.azure.com"

# Azure AI Foundry project and agent details
AI_FOUNDRY_PROJECT_NAME="<your-ai-foundry-project-name>"
AI_FOUNDRY_AGENT_ID="<your-agent-id>"

# API version for Voice Live API (keep default unless instructed otherwise)
AZURE_VOICE_LIVE_API_VERSION=2025-05-01-preview

# --- Voice Configuration (Optional) ---
# TTS Voice Name - change this to use different voices
# Examples: "en-US-AriaNeural", "en-US-JennyNeural", "en-GB-SoniaNeural", "fr-FR-DeniseNeural"
AZURE_TTS_VOICE_NAME="en-IN-AartiIndicNeural"

# --- Optional (for alternative flows / quickstart scripts) ---
# If you are NOT using AAD (DefaultAzureCredential), you can provide an API key.
# AZURE_VOICE_LIVE_API_KEY="<your-speech-service-api-key>"

# If using the models quickstart sample, specify the model name.
# AZURE_VOICE_LIVE_MODEL="<your-voice-live-model>"

# Authentication tip: the main app uses AAD via DefaultAzureCredential.
# Run `az login` in your terminal, or sign in via VS Code Azure extension.


# the following are added for using gpt-4o-realtime-preview model. These are not required when calling the agent directly.
VOICE_LIVE_MODEL="gpt-4o-realtime-preview"

ai_search_url = "https://<your-search>.search.windows.net"
ai_search_key = ""
ai_index_name = "vector-edu-docs-idx"
ai_semantic_config = "vector-edu-docs-idx-semantic-configuration"

logic_app_url_shipment_orders = "<your-logic-app-url>"
logic_app_url_call_log_analysis="<your-logic-app-url>"
ecom_api_url="https://contosoecomapis.azurewebsites.net"
